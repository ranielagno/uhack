<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/app_game1_bg2"
    tools:context="com.ranielagno.uhack.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/male"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.11"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/name"
                android:text="Angelo Suinan"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/email"
                android:text="angelosuinan@gmail.com"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/balance"
                android:text="Remaining Money: 200"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/added_days"
                android:text="Days to be added: 5"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="2GO"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/company"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/start_stock"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="Jan 2, 2017"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/start_date"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="120"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/end_date"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:text="Jan 20, 2017"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/bet"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="100"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/low"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundcorner"
            android:text="Low" />

        <Button
            android:id="@+id/high"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/roundcorner"
            android:text="High" />

    </LinearLayout>

</RelativeLayout>