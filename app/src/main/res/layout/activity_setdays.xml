<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <TextView
        android:id="@+id/companyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/companyText"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/shareText"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="45dp"
        android:layout_toStartOf="@+id/companyText"
        android:text="7.7"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gainText"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginStart="33dp"
        android:text="123"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/valueText"
        android:layout_alignBottom="@+id/valueText"
        android:layout_toEndOf="@+id/companyText" />

    <TextView
        android:id="@+id/valueText"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:text="P1070"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/shareText"
        android:layout_alignBottom="@+id/shareText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gain"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/gainText" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:text="Value" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareText"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="17dp"
        android:layout_toStartOf="@+id/companyText"
        android:text="Shares" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TARGET DATE"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/targetDate"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/textView10"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/textView12"
        android:layout_toEndOf="@+id/valueText"
        android:background="@drawable/gradient"
        android:text="Next"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
